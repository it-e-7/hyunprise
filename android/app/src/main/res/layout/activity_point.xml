<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.member.point.PointActivity"
    android:padding="15dp"
    >

    <LinearLayout
        android:id="@+id/mypoint_first_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        >
        <Button
            android:id="@+id/point_back_button"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:background="@color/invisible"
            android:drawableStart="@drawable/ic_back_arrow_24dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15sp"
            android:text="마이 포인트"/>
    </LinearLayout>
    <TextView
        android:id="@+id/point_MyH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MY.H"
        android:textColor="@color/myblack"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mypoint_first_linear" />

    <View
        android:id="@+id/mypoint_debind_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/myblack"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/point_MyH"
        tools:layout_editor_absoluteX="13dp" />

    <LinearLayout
        android:id="@+id/point_first_linear"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/point_MyH">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="사용자님의 포인트" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:text="4,321P"
            android:textColor="#371F78"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/point_barcode_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/point_first_linear"
        >
        <ImageView
            android:id="@+id/point_barcode_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/point_first_linear"/>
    </LinearLayout>

    <View
        android:id="@+id/mypoint_debind_view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/myblack"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/point_barcode_layout"
        />

    <VideoView
        android:id="@+id/my_point_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mypoint_debind_view2"
        tools:layout_editor_absoluteX="15dp" />

</androidx.constraintlayout.widget.ConstraintLayout>