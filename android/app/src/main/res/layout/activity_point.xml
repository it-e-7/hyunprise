<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.member.point.PointActivity"
    android:padding="15dp"
    >


    <Button
        android:id="@+id/point_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/invisible"
        android:drawableStart="@drawable/ic_back_arrow_24dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/point_MyH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MY.H"
        android:textColor="@color/myblack"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/point_back_button" />

    <LinearLayout
        android:id="@+id/point_first_linear"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/point_MyH">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="사용자님의 포인트" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:text="4,321P"
            android:textColor="#371F78"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/point_barcode_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/point_first_linear"/>

</androidx.constraintlayout.widget.ConstraintLayout>