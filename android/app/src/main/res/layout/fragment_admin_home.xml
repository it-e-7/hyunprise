<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.admin.home.AdminHomeFragment">

    <ImageView
        android:id="@+id/admin_home_banner_iv"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/home_banner"
        app:layout_constraintBottom_toTopOf="@id/admin_home_btn_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/admin_home_btn_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/admin_home_banner_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/admin_home_coupon_issuer_btn"
            android:layout_width="250dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toTopOf="@id/admin_home_show_issued_coupons_btn"
            app:layout_constraintEnd_toEndOf="@id/admin_home_btn_group"
            app:layout_constraintTop_toTopOf="@id/admin_home_btn_group"
            android:backgroundTint="@color/purple"
            android:textColor="@color/white"
            android:text="쿠폰 발급하기"/>

        <Button
            android:id="@+id/admin_home_show_issued_coupons_btn"
            android:layout_width="250dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="@id/admin_home_btn_group"
            app:layout_constraintEnd_toEndOf="@id/admin_home_btn_group"
            app:layout_constraintTop_toBottomOf="@id/admin_home_coupon_issuer_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            android:backgroundTint="@color/purple"
            android:textColor="@color/white"
            android:text="쿠폰 발급현황 보기"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>