<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/admin_issued_coupon_item_container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.member.coupon.IssuedCouponContainerActivity"
        android:paddingHorizontal="20sp"
        >

    <ImageView
            android:id="@+id/admin_issued_coupon_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="20sp" />

    <TextView
            android:id="@+id/admin_issued_coupon_item_brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="[CAFE H]"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@+id/admin_issued_coupon_item_icon"
            app:layout_constraintStart_toEndOf="@+id/admin_issued_coupon_item_icon"
            android:layout_marginStart="20sp"
            app:layout_constraintBottom_toTopOf="@+id/admin_issued_coupon_item_icon" />

    <TextView
            android:id="@+id/admin_issued_coupon_item_coupon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="메론 빙수 교환권"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/admin_issued_coupon_item_brand_name"
            app:layout_constraintStart_toStartOf="@+id/admin_issued_coupon_item_brand_name" />

    <TextView
            android:id="@+id/admin_issued_coupon_item_creation_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="발급 일자 | 2023.06.30"
            android:textColor="@color/purple"
            app:layout_constraintBottom_toBottomOf="@+id/admin_issued_coupon_item_icon"
            app:layout_constraintStart_toStartOf="@+id/admin_issued_coupon_item_coupon_name" />

      <View
            style="@style/style_item_divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout >